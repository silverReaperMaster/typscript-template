{
  "extends": "ts-node/node16/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "strict": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {}
  },
  "module": "ESNext",
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules", "build"
  ]
}
